rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Listing images
    match /listings/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view listing images
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can upload
    }

    // User profile images
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public profile images
      allow write: if request.auth != null && request.auth.uid == userId; // Only own profile
    }

    // Avatar images
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Public avatar images
      allow write: if request.auth != null && request.auth.uid == userId; // Only own avatar
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}